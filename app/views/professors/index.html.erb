<h1> Word Of Mouth Main Page<h1>

<%= form_tag professors_path, :method => 'get' do%>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag 'Search Professors'%>
<% end %>

<table>
    <thead>
    <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Department</th>
    </tr>
    </thead>

    <tbody>
    <% @professors.each do |professor| %>
    <tr>
        <td> <%= professor.first_name %> </td>
        <td> <%= professor.last_name %> </td>
        <td> <%= professor.department%> </td>
        <td> <%= link_to 'show', professor_path(professor) %> </td>

    </tr>
    <% end %>
    </tbody>
</table>

<br>

<%#= link_to 'add a new professor', new_professor_path %>