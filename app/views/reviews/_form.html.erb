<div class="container">
    <div class="row justify-content-center mt-3">
        <%= form_for @review do |f| %>
        <div class="form-group">
            <%= f.label :rating %>
            <%= f.number_field :rating, in: 1..5, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :content, class: "mt-2" %>
            <%= f.text_area :content, class: "form-control", cols: 50, rows: 8 %>
        </div>
        <div class="row justify-content-center">
            <%= f.submit "submit review", class: "btn btn-danger" %>
        </div>
        <% end %>
    </div>
</div>