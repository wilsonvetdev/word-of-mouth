<div class="jumbotron jumbotron-fluid mt-5 bg-transparent">
    <div class="container">
        <div class="row justify-content-center">
            <h2 class="text-danger mb-5"> Read and write reviews about your professors! Your GPA depends on it. </h2>
        </div>

        <% if @error %>
        <div class="row justify-content-center mt-3">
            <div class="alert alert-danger" role="alert">
                <%= @error %>
                <button type="button" class="close ml-3" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <% end %>

        <div class="container d-flex justify-content-center">
            <div class="col text-right">
                <%= form_tag "/handle_login" do %>
                <div class="form-group">
                    <%= label_tag :username %>
                    <%= text_field_tag :username %>
                </div>
                <div class="form-group">
                    <%= label_tag :password %>
                    <%= password_field_tag :password %>
                </div>
                <%= submit_tag "Log In", class: "btn btn-danger ml-4" %>
                <% end %>
            </div>
            <div class="col">
                <%= image_tag 'signin.png', alt: 'picture of a cartoon person', style: 'display: block; margin: auto; width: 40%;', class: 'ml-0' %>
            </div>
        </div>

    </div>
</div>
