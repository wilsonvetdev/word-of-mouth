<div class="jumbotron jumbotron-fluid mt-5 bg-transparent">
    <div class="container">
        <div class="row justify-content-center">
            <h2 class="text-danger mb-5"> Read and write reviews about your professors! Your GPA depends on it. </h2>
        </div>


        <div class="container d-flex justify-content-center">

            <div class="col text-right">
                <%= form_for @user do |f| %>
                <div class="form-group">
                    <%= f.label :username %>
                    <%= f.text_field :username %>
                </div>
                <div class="form-group">
                    <%= f.label :password %>
                    <%= f.password_field :password %>
                </div>
                <%= f.submit "Create User", class: "btn btn-danger ml-4" %>
                <% end %>
            </div>
            <div class="col">
                <%= image_tag 'register.png', alt: 'picture of a cartoon person', style: 'display: block; margin: auto; width: 40%;', class: 'ml-0' %>
            </div>
        </div>
    </div>

</div>