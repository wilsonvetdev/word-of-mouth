<div class="container">
    <div class="row justify-content-center m-5">
        <h2> <%= @current_user.username %>'s profile page </h2>
    </div>
    <div class="row justify-content-center">
        <h2> Your Reviews Here: </h2>
    </div>

    <div class="row justify-content-center">
        <% @current_user.reviews.each do |review| %>
        <div class="card text-center w-50">
            <div class="card-body">
                <h5 class="card-title">
                    <p> <%= review.professor.full_name %> </p>
                </h5>
                <p> <%= "Rating: #{review.rating}" %> </p>
                <p> <%= review.created_at.strftime("%F") %> </p>
                <h6 class="card-subtitle mb-2 text-muted"> <%= review.content %> </h6>
            </div>
        </div>
        <% end %>
    </div>

    <% if @current_user.reviews.count == 0 %>
        <div class="row justify-content-center">
            <p> Starting writing reviews! </p>
        </div>
    <% end %>

</div>