<div class="container mt-5">

    <% if @success %>
    <div class="alert alert-success" role="alert">
        <%= @success %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <% end %>

    <div class="row">
        <h3> College Name: <%= @college.name %> </h3>
    </div>

    <div class="row">
        <h3> City: <%= @college.city %> </h3>
    </div>

    <div class="row">
        <h3> State: <%= @college.state %> </h3>
    </div>

    <div class="row">
        <p> Review Average: 
            <% if !@college.review_average.nan? %>
                <%= @college.review_average %> 
            <% else %>
                <span> *no reviews to compute average yet* </span>
            <% end %>
        </p>
    </div>

    <div class="row">
        <p> <%= link_to "Add a professor to this college", new_workplace_path %> </p>
    </div>

    <div class="row">

        <% @professors.each do |professor|%>
        <div class="mb-3 col-lg-3 col-md-3 col-sm-12 col-xs-12 mt-5">
            <%= link_to professor.full_name, professor_path(professor) %>
        </div>
        <% end %>

        </ul>
    </div>
</div>